{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "Boilerplate REST API built using Express and TypeScript",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "swagger": "tsoa spec",
    "test": "test"
  },

  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node-dev src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/managervcf/express-typescript.git"
  },
  "keywords": [
    "rest",
    "api",
    "typescript",
    "express",
    "nodejs",
    "postgresql"
  ],
  "author": "Mateusz Pyzowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/managervcf/express-typescript/issues"
  },
  "homepage": "https://github.com/managervcf/express-typescript#readme",
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.3.0",
    "@types/swagger-ui-express": "^4.1.2",
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
